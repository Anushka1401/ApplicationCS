<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/leafadmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/leafadmin"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_loop="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/dp2"
        android:id="@+id/dialogbox_adminimg"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_adminimg"
        android:id="@+id/dialogbox_adminname"
        android:text="userName"
        android:textSize="25sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:fontFamily="sans-serif"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_adminname"
        android:id="@+id/dialogbox_aid"
        android:text="uId : vhfgvg656hgh"
        android:textSize="14sp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:fontFamily="sans-serif"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_aid"
        android:id="@+id/dialogbox_msgbtn2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="Message"
        android:textColor="@color/babyblue"
        android:background="@drawable/msg_back_btn"
        android:textAllCaps="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_msgbtn2"
        android:layout_marginTop="30dp"
        android:id="@+id/dialogbox_admindesc"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:text="This user is registered as an Administrator of ScanBuddy"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_admindesc"
        android:layout_marginTop="10dp"
        android:id="@+id/dialogbox_terms"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/blue"
        android:textAlignment="center"
        android:text="*Any message sent from here shall be received by the user on their registered mobile number"
        android:paddingBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>